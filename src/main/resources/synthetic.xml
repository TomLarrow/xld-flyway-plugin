<synthetic xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns="http://www.xebialabs.com/deployit/synthetic"
           xsi:schemaLocation="http://www.xebialabs.com/deployit/synthetic synthetic.xsd">

    <type type="flyway.Runner" extends="flyway.VirtualContainer" >
        <property name="serverUrl" required="true" />
        <property name="username" required="false"/>
        <property name="password" required="false" password="true"/>
    </type>

    <type type="flyway.DeployedScripts" extends="udm.BaseDeployedArtifact" deployable-type="flyway.Scripts" container-type="flyway.Runner">
        <generate-deployable type="flyway.Scripts" extends="udm.BaseDeployableFolderArtifact"/>
        <property name="schemas" kind="set_of_string" required="true" />
        <property name="table" kind="string" required="false" />
        <property name="locations" kind="set_of_string" required="false" description="Location in archive containing scripts"/>
        <property name="encoding" kind="string" required="false" />
        <property name="baselineOnMigrate" kind="boolean" required="false" description="Whether to automatically call baseline when migrate is executed against a non-empty schema with no metadata table."/>
        <property name="username" required="false"/>
        <property name="password" required="false" password="true"/>
        <property name="startClean" required="false" kind="boolean" default="false" description="Drops all objects (tables, views, procedures, triggers, ...) in the configured schemas. The schemas are cleaned in the order specified by the schemas property."/>
        <property name="repair" required="false" kind="boolean" default="true" description="Repairs the Flyway metadata table."/>
    </type>

</synthetic>

